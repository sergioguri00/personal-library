---
const { books } = Astro.props;

interface Book {
  id: number;
  title: string;
}
---

<section
  class="mt-10 booksGrid justify-center items-center w-full gap-y-4 px-10"
>
  {
    books.map((book: Book) => (
      <a
        transition:name={`book-${book.id}`}
        href={`/books/${book.id}`}
        class="flex justify-center items-center"
      >
        <img
          src={`/covers/${book.id}.webp`}
          alt={book.title}
          class="w-48 h-72 object-fit hover:scale-105 transition"
        />
      </a>
    ))
  }
</section>
